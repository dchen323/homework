<div class="create">
<%if type == :new%>
  <h3> Create an album </h3>
  <%action_url = band_albums_url(band)%>
  <%button_type = "Create Album"%>
<%else%>
  <h3> Edit an album </h3>
  <%action_url = album(@album)%>
  <%button_type = "Edit Album"%>
<%end%>
</div>
<div class="album">
  <div class="inputs">
<form action ="<%=action_url%>" method="post" class="make_value">
  <%if type == :edit%>
    <input type="hidden", name="_method" method="patch">
  <%end%>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label for="name" class="title">Title:</label>
    <input type='text' name="album[title]" value="<%=@album.title%>">
  <label for="name">Year:</label>
    <input type='text' name="album[year]" value="<%=@album.year%>">
  <label for="live">Live</label>
    <input type="radio" name="album[recording_type]" value="live">
  <label for="studio">Studio</label>
    <input type="radio" name="album[recording_type]" value="studio">
  <input type="submit" value="<%=button_type%>">
  </div>
</form>
</div>
